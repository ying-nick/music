<!-- pages/blog-edit/blog-edit.wxml -->
<view class="container">
	<!-- 原生组件层级最高,原生组件不允许bind有：号 -->
	<textarea
	 class="content"
	 placeholder="分享新鲜事..."
	 bindinput="onInput"
	 maxlength="140"
	></textarea>
	<view class="image-list">
		<!-- 显示图片 -->

		<!-- 选择图片 -->
		<view class="image-wrap selectphoto">
			<i class="iconfont icon-yuanjiaoshizijiahao1"></i>
		</view>
	</view>
</view>
<view class="footer">
	<text class="words-num">{{wordsNum}}</text>
	<button class="send-btn">发布</button>
</view>

