<!-- components/blog-ctrl/blog-ctrl.wxml -->
<view class="ctrl">
	<view class="ctrl-item" bind:tap="onComment">
		<i class="iconfont icon-pinglun icon"></i>
		<text class="item">评论</text>
	</view>
	<view class="ctrl-item share">
		<button
		 open-type="share"
		 data-blogid="{{blogId}}"
		 data-blog="{{blog}}"
		 class="share-btn"
		 hover-class="share-hover"
		>
			<i class="iconfont icon-fenxiang icon"></i>
			<text class="item">分享</text>
		</button>
	</view>
</view>
<login modalShow="{{loginShow}}" bind:loginsuccess="onLoginsuccess" bind:loginfail="onLoginfail" />
<bottom-modal modalShow="{{modalShow}}">
	<view slot="modal-content">
		<textarea
		 bindinput="onInput"
		 name="content"
		 class="comment-content"
		 placeholder="尽情抒发文采..."
		 value="{{content}}"
		 fixed="true"
		></textarea>
		<button class="send" form-type="submit" bind:tap="onSend">发送</button>
	</view>
</bottom-modal>

