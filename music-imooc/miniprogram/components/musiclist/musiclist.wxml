<!-- components/musiclist/musiclist.wxml -->
<block wx:for="{{musicList}}" wx:key="id">
	<view
	 class="musiclist-container {{item.id===playingId?'active':''}}"
	 bind:tap="onSelect"
	 data-musicid="{{item.id}}"
	 data-index="{{index}}"
	>
		<view class="musiclist-index">{{index+1}}</view>
		<view class="musiclist-info">
			<view class="musiclist-name">
				{{item.name}}
				<text class="musiclist-alia">{{item.alia.length==0?"":item.alia}}</text>
			</view>
			<view class="musiclist-singer">{{item.ar[0].name}}-{{item.al.name}}</view>
		</view>
	</view>
</block>

